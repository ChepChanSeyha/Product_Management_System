    private void formWindowOpened(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowOpened
        conn = DBConnect.DBConnect();
        code_tf.setText(itemCode);
        name_tf.setText(itemName);
        curStock_tf.setText(stock);
        code_tf.setEditable(false);
        name_tf.setEditable(false);
        curStock_tf.setEditable(false);
        stock_tf.requestFocus();
    }//GEN-LAST:event_formWindowOpened

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try{
            int stockIn = Integer.parseInt(stock_tf.getText());
            int opt = JOptionPane.showConfirmDialog(null, "Are you sure?","Confirmation",JOptionPane.YES_NO_OPTION);
            if(opt == JOptionPane.YES_OPTION){
                String sql = "UPDATE inventory SET stocks = '"+stock+"' + '"+stockIn+"' WHERE item_code = '"+itemCode+"' ";
                String sqlLog = "INSERT INTO inventory_log (user,action,item_name) VALUES('"+USERNAME+"','Stock In "+stock_tf.getText()+"','"+name_tf.getText()+"')";
                try{    
                    st = conn.createStatement();
                    st.executeUpdate(sql);
                    st.executeUpdate(sqlLog);
                    this.hide();
                    JOptionPane.showMessageDialog(null, "Stocks Added");
                    main.item_tblRefresh();
                            
                }catch(Exception ex){
                    System.out.println(ex);
                }
            }
        }catch(Exception ex){
            JOptionPane.showMessageDialog(null,"Invalid, Please Input number only");
        }
        
    }//GEN-LAST:event_jButton1ActionPerformed

