package ex1;

public class Employee {
	
	   private String ID;
	   private String name;
	   private float bSalary;
	   private int experience;
	   private int hour;

	   public Employee(String ID, String name, float bSalary, int experience, int hour) {
	      this.ID = ID;
	      this.name = name;
	      this.bSalary = bSalary;
	      this.experience = experience;
	      this.hour = hour;
	   }
	   
	   public float monthly (float Salary) {
		   float mSalary = this.bSalary + (Salary*10/100);
		   return mSalary;
	   }
	   
	   public float annually (float bonus) {
		   float bonusSalary = this.bSalary +  bonus;
		   return bonusSalary;
	   }

	   public String toString() {
	      return ID + " " + name + " " + bSalary + experience + hour;
	   }

	public int getHour() {
		return hour;
	}

	public void setHour(int hour) {
		this.hour = hour;
	}

	public String getID() {
		return ID;
	}

	public void setID(String iD) {
		ID = iD;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public float getbSalary() {
		return bSalary;
	}

	public void setbSalary(float bSalary) {
		this.bSalary = bSalary;
	}

	public int getExperience() {
		return experience;
	}

	public void setExperience(int experience) {
		this.experience = experience;
	}

}
